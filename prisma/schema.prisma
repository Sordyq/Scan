generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model user {
  id            String      @id
  email         String?     @unique(map: "User_email_key")
  name          String?
  role          String?
  createdAt     DateTime?   @default(now())
  fullName      String?
  password      String?
  did           String?     @unique
  mnemonic      String?
  privateKey    String?
  publicKey     String?
  walletAddress String?     @unique
  qrsession     qrsession[]
}

model qrsession {
  id        Int       @id @default(autoincrement())
  sessionId String?   @unique(map: "QrSession_sessionId_key")
  status    String?   @default("PENDING")
  userId    String?
  createdAt DateTime? @default(now())
  expiresAt DateTime?
  challenge String?
  role      String?
  syncData  String?
  user      user?     @relation(fields: [userId], references: [id], map: "QrSession_userId_fkey")

  @@index([userId], map: "QrSession_userId_fkey")
}
